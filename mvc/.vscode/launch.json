{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "WebAPI (MVC)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/bin/Debug/net6.0/mvc.dll",
      "args": [],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": "Swagger UI (MVC)",
      "request": "launch",
      "type": "chrome",
      "url": "https://localhost:5001/swagger/index.html",
      "webRoot": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "WebAPI (MVC) & Swagger UI",
      "configurations": ["WebAPI (MVC)", "Swagger UI (MVC)"]
    }
  ]
}
